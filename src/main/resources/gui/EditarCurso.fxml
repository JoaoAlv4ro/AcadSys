<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EditarCursoController">

    <Label style="-fx-font-size: 16px;" text="Edição de Curso" />

    <TextField fx:id="txtNome" maxWidth="300" promptText="Nome do curso" />
    <TextField fx:id="txtCargaHoraria" maxWidth="300" promptText="Carga horária" />
    <TextField fx:id="txtLimiteAlunos" maxWidth="300" promptText="Limite de alunos" />

    <Button onAction="#atualizarCurso" text="Salvar Alterações" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
