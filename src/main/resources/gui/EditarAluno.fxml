<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EditarAlunoController">
    <Label style="-fx-font-size: 16px;" text="Edição de Aluno" />

    <TextField fx:id="txtNome" maxWidth="300" promptText="Nome do aluno" />
    <TextField fx:id="txtCpf" maxWidth="300" promptText="CPF do aluno" editable="false" />
    <TextField fx:id="txtEmail" maxWidth="300" promptText="E-mail do aluno" />
    <DatePicker fx:id="dpNascimento" maxWidth="300" promptText="Data de nascimento" />

    <Button onAction="#atualizarAluno" text="Salvar Alterações" style="-fx-cursor: hand;" />

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>